// Prisma schema for Coach Mike application
// Using SQLite in development and Postgres in production
// Generate client via `npx prisma generate`

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  passwordHash  String?
  profile       Profile?
  sessions      ChatSession[]
}

model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  data      Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model ChatSession {
  id        String    @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime   @default(now())
  messages  Message[]
  user      User       @relation(fields: [userId], references: [id])
  @@index([userId])
}

model Message {
  id        String      @id @default(cuid())
  sessionId String
  role      String
  content   String
  createdAt DateTime     @default(now())
  session   ChatSession  @relation(fields: [sessionId], references: [id])
  @@index([sessionId])
}